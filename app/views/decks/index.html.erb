<h1><%= @user.username %></h1>
<%= link_to "Create Deck", new_deck_path, class: "create-deck-button" %>


 <h2>User Decks</h2>
  <% @user.decks.each do |deck| %>
    <a href="/decks/<%= deck.id %>">
    <img src="<%= asset_path('deck_back/Magic_card_back.jpg') %>" alt="<%= deck.name %>">
    <%= deck.name %>
    <p> <%= link_to "Delete Deck", decks_path, method: :destroy, data: { confirm: "Are you sure you want to delete this deck?" }, class: "delete-deck-button" %> </p>    
    </a>
    <% end %>
