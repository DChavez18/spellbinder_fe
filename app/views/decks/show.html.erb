<h2><%= @deck.name %><h2>
<p><%= @deck.description %></p>
<h3>Main Board <%=@deck.cards["main_board"].count %></h3>
<% @deck.cards["main_board"].each do |card| %>
  <li><%= card["name"] %>, <%= card["converted_mana_cost"].to_i %></li>
   <%= link_to collection.name, collection_path(collection.code), style: "text-decoration: none; color: black;", class: "hover-highlight" %>
<% end %>
<br>
<h3>Side Board <%=@deck.cards["side_board"].count %></h3>
<% @deck.cards["side_board"].each do |card| %>
  <li><%= card["name"] %>, <%= card["converted_mana_cost"].to_i %></li>
<% end %>
<br>
<h3>Maybe Board <%=@deck.cards["maybe_board"].count %></h3>
<% @deck.cards["maybe_board"].each do |card| %>
  <li><%= card["name"] %>, <%= card["converted_mana_cost"].to_i %></li>
<% end %>
<br>